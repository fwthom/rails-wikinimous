<div class="container mt-3">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">
      <h2>All Articles</h2>
      <ul class="list-unstyled">
        <% @articles.each do |article| %>
          <li class="mb-3">
            <div class="card" style="width: 100%;">
              <div class="card-body">
                <h5 class="card-title"><%= article.title %></h5>
                <h6 class="card-subtitle mb-2 text-muted">Published on <%= article.created_at.strftime("%B %d, %Y") %></h6>
                <p class="card-text">
                  <%= truncate(article.content, length: 100) %>
                </p>
                <%= link_to "Read More", article_path(article), class: "card-link" %>
                <%= link_to "Edit", edit_article_path(article), class: "card-link" %>
              </div>
            </div>
          </li>
        <% end %>
      </ul>
    </div>
  </div>
</div>
