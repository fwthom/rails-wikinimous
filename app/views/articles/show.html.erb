<div class="card mb-4 p-3">
  <h2 class="card-title"><%= @article.title %></h2>
  <p class="card-text"><%= @article.content %></p>
</div>

<%= link_to "Back", articles_path, class: "btn btn-secondary" %>
<%= link_to "Edit", edit_article_path(@article), class: "btn btn-primary" %>
<%= form_with url: article_path(@article), method: :delete, local: true, class: "d-inline" do %>
  <%= button_to "Delete", article_path(@article), method: :delete, data: { confirm: "Are you sure you want to delete this article?" }, class: "btn btn-danger" %>
<% end %>
