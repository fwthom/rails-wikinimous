<!-- app/views/articles/edit.html.erb -->

<h1>Edit Article</h1>

<div class="container mt-4">
  <div class="row">
    <div class="col-sm-8 offset-sm-2">

      <!-- Display the Selected Article's Current Title and Content -->
      <div class="card mb-4 p-3">
        <h2 class="card-title"><%= @article.title %></h2>
        <p class="card-text"><%= @article.content %></p>
      </div>

      <!-- Edit Form for the Selected Article -->
      <%= form_with model: @article, local: true, class: "card p-4 shadow" do |form| %>
        <% if @article.errors.any? %>
          <div class="alert alert-danger">
            <h4 class="alert-heading">Errors</h4>
            <ul>
              <% @article.errors.full_messages.each do |message| %>
                <li><%= message %></li>
              <% end %>
            </ul>
          </div>
        <% end %>

        <div class="mb-3">
          <%= form.label :title, class: "form-label" %>
          <%= form.text_field :title, class: "form-control", placeholder: "Enter new title" %>
        </div>

        <div class="mb-3">
          <%= form.label :content, class: "form-label" %>
          <%= form.text_area :content, class: "form-control", placeholder: "Enter new content", rows: 5 %>
        </div>

        <%= form.submit "Update Article", class: "btn btn-primary mb-2" %>
        <%= link_to "Back", articles_path, class: "btn btn-secondary" %>
      <% end %>

    </div>
  </div>
</div>
