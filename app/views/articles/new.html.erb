<!-- app/views/articles/new.html.erb -->

<h1 class="my-4">Create a New Article</h1>

<%= form_with model: @article, local: true, class: "card p-4 shadow" do |form| %>
  <% if @article.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">Errors</h4>
      <ul>
        <% @article.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control", placeholder: "Enter article title" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control", placeholder: "Enter article content", rows: 5 %>
  </div>

  <%= form.submit "Create Article", class: "btn btn-primary mb-2" %>
  <%= link_to "Back", articles_path, class: "btn btn-secondary" %>
<% end %>
